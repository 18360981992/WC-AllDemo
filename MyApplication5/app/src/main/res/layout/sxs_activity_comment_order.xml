<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE6E3E3"
    tools:context="com.projecttest.administrator.hotboom.myapplication.CommentOrderActivity">

    <LinearLayout
        android:id="@+id/sxs_activity_comment_order"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
         <!--title-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFE6E3E3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/finsh"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="9"
                android:background="@mipmap/back2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="评价订单"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>
          <!--上半部分-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorWhite"
            android:orientation="vertical">
              <TextView
                  android:layout_marginLeft="100dp"
                  android:layout_marginTop="30dp"
                  android:id="@+id/sxs_userName"
                  android:textSize="15dp"
                  android:textColor="@color/black2"
                  android:text="张三"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
              <TextView
                  android:layout_marginLeft="100dp"
                  android:layout_marginTop="10dp"
                  android:textSize="15dp"
                  android:textColor="@color/black2"
                  android:id="@+id/sxs_usertel"
                  android:text="18752333112"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
              <TextView
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:layout_marginTop="15dp"
                  android:background="#FFDBD2D2"
                  android:layout_width="match_parent"
                  android:layout_height="1dp" />
             <LinearLayout
                 android:layout_marginTop="15dp"
                 android:orientation="horizontal"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
                 <TextView
                     android:layout_gravity="center"
                     android:layout_marginLeft="100dp"
                     android:id="@+id/unsatisfy"
                     android:background="@drawable/shape_bg"
                     android:text="不满意"
                     android:textColor="@color/black"
                     android:gravity="center"
                     android:layout_width="70dp"
                     android:layout_height="30dp" />
                 <TextView
                     android:layout_gravity="center"
                     android:layout_marginLeft="30dp"
                     android:background="@drawable/shape_bg"
                     android:text="满意"
                     android:id="@+id/satisfy"
                     android:textColor="@color/black"
                     android:gravity="center"
                     android:layout_width="70dp"
                     android:layout_height="30dp" />
             </LinearLayout>

            <GridView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="10dp"
                android:numColumns="3"
                android:layout_marginTop="10dp"
                >

            </GridView>
        </LinearLayout>
           <!--下半部分-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.projecttest.administrator.hotboom.myapplication.view.CircleImageView
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/shopimage"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@mipmap/ic_launcher"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:textSize="20dp"
                    android:text="满意"
                    android:id="@+id/shop_name"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp" />
            </LinearLayout>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:background="#FFDBD2D2"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
              <TextView
                  android:layout_gravity="center"
                  android:layout_marginTop="10dp"
                  android:textSize="18dp"
                  android:id="@+id/remark"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/lv_sxs"
                android:layout_width="match_parent"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="70dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
               <ImageView
                   android:id="@+id/star1"
                   android:background="@drawable/star1"
                   android:layout_width="40dp"
                   android:layout_height="40dp" />
                <ImageView
                    android:id="@+id/star2"
                    android:background="@drawable/star1"
                    android:layout_marginLeft="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <ImageView
                    android:id="@+id/star3"
                    android:background="@drawable/star1"
                    android:layout_marginLeft="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <ImageView
                    android:id="@+id/star4"
                    android:background="@drawable/star1"
                    android:layout_marginLeft="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <ImageView
                    android:id="@+id/star5"
                    android:background="@drawable/star1"
                    android:layout_marginLeft="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>