<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="wheelViewStyle_time">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="itemNumber">3</item>
        <item name="lineColor">#D4D4D4</item>
        <item name="lineHeight">1dp</item>
        <item name="noEmpty">true</item>
        <item name="normalTextColor">#222222</item>
        <item name="normalTextSize">20dp</item>
        <item name="selectedTextColor">#222222</item>
        <item name="selectedTextSize">21dp</item>
        <item name="unitHeight">50dp</item>
    </style>

</resources>
